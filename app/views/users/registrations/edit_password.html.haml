= render 'shared/header-profiles'

.profiles-background
  .profiles-inner
    .side-contents
      %ul
        %li
          =link_to edit_user_registration_path do
            プロフィールを編集
        %li.current
          =link_to edit_password_path do
            パスワードを変更
    .password-edit-box
      = form_for(resource, url: {controller: "registrations", action: "update_password"}, html: { method: :post }) do |f|
        .password-edit-box__heading
          .password-edit-box__heading__left-content
            -if current_user.image?
              =image_tag current_user.image.url, class: "user-image"
            -else
              =image_tag src="user1.png", class: "user-image"
          .password-edit-box__heading__right-content
            =current_user.username
        = devise_error_messages
        .password-edit-box__contents
          .password-edit-box__contents__text
            %p 現在のパスワード
          .password-edit-box__contents__form
            =f.password_field :current_password, class: "password-form"
        .password-edit-box__contents
          .password-edit-box__contents__text
            %p 新しいパスワード
          .password-edit-box__contents__form
            =f.password_field :password, class: "password-form"
        .password-edit-box__contents
          .password-edit-box__contents__text
            %p 新しいパスワードを確認
          .password-edit-box__contents__form
            =f.password_field :password_confirmation, class: "password-form"
        .password-edit-box__submit
          = f.submit "パスワードを変更", {class: "password-submit"}
          =link_to "#" do
            パスワードを忘れた場合
  .profiles-password-bottom

= render 'shared/footer'
