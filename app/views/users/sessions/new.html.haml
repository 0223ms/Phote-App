.signIn-background
  .signIn-inner
    .signIn-main-box
      .signIn-main-box__title
        %h1#users-title-id Photo
      .signIn-main-box__form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = devise_error_messages
          .email-field-box
            =f.email_field :email, class: "signIp-form-field", id: "signIp-form-field-email"
            %label(for="signIp-form-field-email") メールアドレス
          .password-field-box
            =f.password_field :password, class: "signIp-form-field", id: "signIp-form-field-password"
            %label(for="signIp-form-field-password") パスワード
          =f.submit 'ログイン', class: "signIp-form-submit"
    .signUp-box
      .signUp-box__text
        アカウントをお持ちでないですか？
      .signUp-box__link
        %div{"data-turbolinks" => "false"}
          =link_to new_user_registration_path do
            登録する
    .download-items
      %p ダウンロード
      .item-icon
        =link_to "#", class: "store-icon" do
          =image_tag src="app-store.svg", class: "btn-app"
        =link_to "#", class: "store-icon" do
          =image_tag src="google-play.svg", class: "btn-google"
= render 'shared/footer'
