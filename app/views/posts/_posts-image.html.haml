.mainber
  .mainber__header
    .mainber__header__head
      %span.mainber__head__image
        = image_tag src="/BackgroundHomeSummer.jpg", size: "42x42", class: "tops-icon"
      
      .mainber__header__head__name-place
        .mainber__header__head__name-place__name
          = post.user.username
        .mainber__header__head__name-place__place
          = post.user.nickname
  %span.mainber__images
    =link_to post_path(post) do
      = image_tag post.images.first.image.url, class: "main-new-arrival__product--image--first slick", size: "614x614"
  %section.mainber__icon
    %span.mainber__icon__heart
      = icon('far fa-heart',  class: "mainber__icon__heart__btn--icon")
    %span.mainber__icon__heart
      = icon('far fa-comment',  class: "mainber__icon__heart__btn--icon")
    %span.mainber__icon__heart
      = icon('far fa-share-square',  class: "mainber__icon__heart__btn--icon")


  %section.mainber__fab
    フォロワー、他50人が「いいね！」しました
  .mainber__username
    = post.user.username
  .mainber__content
    = post.content
  .mainber__time
    %time(datetime="#{post.created_at}")= time_ago_in_words(post.created_at)
  .mainber__comment
    = form_with model: @comment, local: true do |f|
      .mainber__comment__box
        = f.text_area :content, class: "comment-text", placeholder: 'コメントを追加...'
        = f.submit "投稿する", class: "comment-submit"



        