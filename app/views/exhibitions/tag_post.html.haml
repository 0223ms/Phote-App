= render 'shared/header-profiles'
.exhibitions-background
  = render 'show-top'
  .show-main-box
    .show-main-inner
      %ul.show-main-lists
        %li.show-main-list
          =link_to exhibition_path(id: @user.id) do
            =icon('fas fa-table', class: "lists-icon")
            %span 投稿
        %li.show-main-list
          =link_to save_post_exhibition_path(id: @user.id) do
            =icon('far fa-bookmark', class: "lists-icon")
            %span いいねした投稿
        %li.show-main-list__current
          =link_to tag_post_exhibition_path(id: @user.id) do
            =icon('fas fa-camera-retro', class: "lists-icon")
            %span タグ付けさせている人
      .show-main-none
        .none-item-icon
          =icon('fas fa-camera-retro', class: "posts-icon")
        %h1.none-item-title
          あなたが写っている写真
        .none-item-text
          写真でタグ付けされると、ここに表示されます。
= render 'shared/footer'
